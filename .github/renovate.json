{
  "schedule": ["every weekend"],
  "labels": ["dependencies"],
  "separateMajorMinor": "false",
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "devDependencies",
      "semanticCommitType": "chore",
      "automerge": false
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "dependencies",
      "semanticCommitType": "fix"
    }
  ],
  "ignoreDeps": ["electron"]
}
